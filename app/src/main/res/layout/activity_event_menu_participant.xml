<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="6dp"
            android:layout_height="80dp">

        <androidx.cardview.widget.CardView
                android:layout_width="187dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/utility"
                android:layout_weight="1"
                android:id="@+id/notices"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="20dp"
                          android:gravity="center"
                          android:layout_height="match_parent">


                <TextView android:layout_width="match_parent"
                          android:gravity="center"
                          android:text="Notices"
                          android:layout_gravity="center"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/utility"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="10dp"
                          android:gravity="center"
                          android:layout_height="match_parent">

                <Button android:layout_width="match_parent"
                          android:gravity="center"
                          android:text="Switch Out"
                          android:layout_gravity="center"
                        android:background="@drawable/utility_button"
                        android:textAllCaps="false"
                          android:textColor="@color/black"
                        android:id="@+id/btn_out"
                          android:textSize="18sp"
                          android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="230dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    android:id="@+id/cv_e_details"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"

                               android:src="@drawable/event1"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Event \nDetails"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_loc"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/place"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Event \nLocation"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="230dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:id="@+id/cv_participant_list"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="130dp"
                               android:layout_margin="8dp"
                               android:src="@drawable/participant"
                               android:layout_height="87dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Participants\nand\nResource Persons"
                              android:textColor="@color/black"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <!--<androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_rp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/group"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Resource \nPerson List"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>-->
            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_rp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/group"
                               android:layout_height="118dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Resource Persons \n Info"
                              android:textColor="@color/black"
                              android:textSize="15sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="230dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:id="@+id/cv_file"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/files"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Event \nFiles"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_photo"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/gallery"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Photo \nGallery"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="230dp">


            <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_event_near_by_place"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/nearme"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Near By \nPlaces"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
            <TextView android:layout_width="180dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"/>

        </LinearLayout>




    </LinearLayout>
    </ScrollView>
</LinearLayout>