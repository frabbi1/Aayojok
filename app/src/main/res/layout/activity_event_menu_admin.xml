<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_margin="15dp"
            android:layout_height="250dp">

        <androidx.cardview.widget.CardView
                android:layout_width="187dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cv_e_details"
                app:cardBackgroundColor="@color/utility"
                android:layout_weight="1"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="20dp"
                          android:layout_height="match_parent">

                <ImageView android:layout_width="match_parent"
                           android:layout_margin="8dp"

                           android:src="@drawable/event1"
                           android:layout_height="100dp"
                />
                <TextView android:layout_width="match_parent"
                          android:gravity="center"
                          android:text="Event \nDetails"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:layout_height="82dp"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="180dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:id="@+id/cv_not"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/utility"
                android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"
                          android:orientation="vertical"
                          android:padding="20dp"
                          android:layout_height="match_parent">

                <ImageView android:layout_width="match_parent"
                           android:layout_margin="8dp"
                           android:src="@drawable/notification"
                           android:layout_height="100dp"
                />
                <TextView android:layout_width="match_parent"
                          android:gravity="center"
                          android:text="Send \nNotification"
                          android:textColor="@color/black"
                          android:textSize="18sp"
                          android:layout_height="82dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="250dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:id="@+id/cv_upload"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/upload"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Upload \nFiles/Photos"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="82dp"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_photo"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/gallery"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Event \nPhotos"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="82dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="15dp"
                android:layout_height="250dp">

            <androidx.cardview.widget.CardView
                    android:layout_width="187dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:id="@+id/cv_file"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/files"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Event \nFiles"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="82dp"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="180dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cv_near_by_place"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/utility"
                    android:layout_height="match_parent">

                <LinearLayout android:layout_width="match_parent"
                              android:orientation="vertical"
                              android:padding="20dp"
                              android:layout_height="match_parent">

                    <ImageView android:layout_width="match_parent"
                               android:layout_margin="8dp"
                               android:src="@drawable/place"
                               android:layout_height="100dp"
                    />
                    <TextView android:layout_width="match_parent"
                              android:gravity="center"
                              android:text="Nearby \nPlaces"
                              android:textColor="@color/black"
                              android:textSize="18sp"
                              android:layout_height="82dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>




    </LinearLayout>
</ScrollView>