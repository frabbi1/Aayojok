<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:padding="50dp"

        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".Activity.RoleSelector">
    <TextView android:layout_width="match_parent"
              android:text="Choose Role"
              android:textSize="30sp"
              android:gravity="center"
              android:layout_marginBottom="10dp"
              android:layout_height="wrap_content"/>

    <!--<Button android:layout_width="match_parent"
            android:text="As an Admin"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_admin"
            android:padding="15dp"
            android:background="@drawable/button_circle"
            android:layout_height="100dp" android:textAllCaps="false"/>-->
    <Button android:layout_width="match_parent"
            android:text="As a Participant"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_participant"
            android:background="@drawable/button_circle"
            android:padding="15dp"
            android:layout_height="100dp" android:textAllCaps="false"/>
    <Button android:layout_width="match_parent"
            android:text="As a Resource Person"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_RP"
            android:padding="15dp"
            android:background="@drawable/button_circle"
            android:layout_height="100dp" android:textAllCaps="false"/>

    <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/log_out"
            android:background="@drawable/btn_google"
            android:textAllCaps="false"
            android:text="Log Out"
    />

</LinearLayout>