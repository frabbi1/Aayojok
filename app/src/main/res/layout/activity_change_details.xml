<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        tools:context=".Activity.ChangeDetailsActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">


    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="Event Name"
              android:layout_height="wrap_content"/>
    <EditText android:layout_width="match_parent"
              android:layout_margin="10dp"
              android:padding="5dp"
              android:background="@drawable/border"
              android:layout_height="80dp"/>
    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="Description"
              android:layout_height="wrap_content"/>

    <EditText android:layout_width="match_parent"
              android:layout_margin="5dp"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="Start Date"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:gravity="center"
              android:text="1/1/19"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Click to Change"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="End Date"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:gravity="center"
              android:text="1/1/19"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Click to Change"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>


    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="Location"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:gravity="center"
              android:text="IIT"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>

    <Button android:layout_width="match_parent"
            android:layout_marginHorizontal="10dp"
            android:text="Click to Change"
            android:layout_marginBottom="10dp"
            android:textAllCaps="false"
            android:layout_height="wrap_content"/>

    <TextView android:layout_width="match_parent"
              android:textSize="20sp"
              android:text="Banner"
              android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView android:layout_width="250dp"
                                       android:layout_gravity="center"
                                       android:layout_margin="10dp"
                                       app:cardCornerRadius="10dp"
                                       android:layout_height="165dp">

        <ImageView android:layout_width="252dp"
                   android:src="@drawable/bnr"
                   android:layout_height="167dp"/>



    </androidx.cardview.widget.CardView>
        <Button android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/utility_button"
                android:textAllCaps="false"
                android:text="Save"
                android:id="@+id/btn_save_details"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</ScrollView>