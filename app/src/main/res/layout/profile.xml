<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"

             android:layout_height="match_parent"


>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"

                android:layout_height="match_parent">
        <LinearLayout

                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:weightSum="2"
                android:orientation="vertical"

        >
            <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#DC87CFCD"

            >

                <de.hdodenhof.circleimageview.CircleImageView

                        android:id="@+id/proPic"
                        android:layout_width="170dp"

                        android:layout_height="170dp"
                        android:src="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"



                />
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:paddingBottom="15dp"
                        android:background="@drawable/border"
                        android:gravity="center"
                        android:text="fazlay rabbi"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:id="@+id/nameField"
                />
                <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="15dp"
                        android:text="Edit Profile"
                        android:id="@+id/editProfile"
                        android:paddingLeft="30dp"
                        android:paddingRight="30dp"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/ic_edit_black_24dp"
                        android:background="@drawable/utility_button"

                />


            </LinearLayout>

            <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"

                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="80dp"


                    android:background="@color/white"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical"

                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Email"
                            android:gravity="center"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:text="gdhfgjh"
                            android:id="@+id/emailField"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"


                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        android:orientation="vertical"
                        android:layout_marginBottom="15dp"

                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Gender"
                            android:textStyle="italic"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Male"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/gender"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"


                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border"
                        android:layout_marginBottom="15dp"
                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Age"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="20"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/ageField"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"


                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border"
                        android:layout_marginBottom="15dp"
                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Phone No"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="01788400808"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/phoneField"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"


                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="15dp"
                        android:orientation="vertical"
                        android:background="@drawable/border"
                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Occupation"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Student"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/occ"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="#000"


                    />


                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border"
                        android:layout_marginBottom="15dp"
                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Institution"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="University of Dhaka"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/insField"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"


                    />


                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/border"
                >
                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="Nationality"
                            android:textStyle="italic"
                            android:textSize="20sp"
                            android:textColor="#0f1c69"


                    />

                    <TextView

                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:text="Bangladeshi"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:id="@+id/nat"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="#000"


                    />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</FrameLayout>